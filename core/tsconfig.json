{
	"compilerOptions": {
		"allowUnreachableCode": false,
		"alwaysStrict": true,
		"declaration": true,
		"incremental": true,
		"module": "commonjs",
		"noImplicitThis": true,
		"noUnusedLocals": true,
		"outDir": "build",
		"pretty": true,
		"resolveJsonModule": true,
		"strict": true,
		"target": "ES2020"
	},
	"include": ["index.ts", "package.json", "src/**/*", "res/**/*.json"]
}
