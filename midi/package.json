{
	"author": "curt.elsasser@gmail.com",
	"dependencies": {
		"@tiny/core": "0.0.1",
		"joi": "17.4.0",
		"midi-file-io": "3.0.1"
	},
	"description": "Tiny machine that converts numeric sequences into MIDI format encodings",
	"devDependencies": {
		"@types/jest": "26.0.24",
		"@types/node": "14.17.7",
		"@typescript-eslint/eslint-plugin": "4.29.0",
		"@typescript-eslint/parser": "4.29.0",
		"eslint": "7.32.0",
		"jest": "27.0.6",
		"jest-junit": "12.2.0",
		"prettier": "2.3.2",
		"ts-jest": "27.0.4",
		"typescript": "4.3.5"
	},
	"engines": {
		"node": ">=14.0.0"
	},
	"license": "ISC",
	"main": "build/index.js",
	"name": "@tiny/midi",
	"scripts": {
		"analyze": "yarn run format && yarn run lint:fix && yarn run test",
		"build": "npx tsc -p tsconfig.json && chmod u+x build/index.js && npm run link",
		"clean": "rm -rf './.buildcache' '*.log' './build'",
		"clean:deep": "yarn run clean; rm -rf './node_modules'",
		"coverage": "yarn run test --coverage",
		"format": "npx prettier --write './*.(js|json)' './(src|test)/**/*.(js|json|ts)'",
		"link": "ln -sf \"`pwd`/build/index.js\" ../build/midi",
		"lint": "npx eslint .",
		"lint:fix": "yarn run lint --fix",
		"rebuild": "npm run clean; yarn run build",
		"test": "npx jest './test/unit'"
	},
	"version": "0.0.1"
}
